/* pages/register/register.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  background-color: #f0f0f0;
}

.logo  image{
  width: 200rpx;
  height: 200rpx;
  margin:  0 auto;
  margin-bottom: 50rpx;
}
.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 50rpx;
}

.input-group {
  width: 80%;
  margin-bottom: 30rpx;
}

.input {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
  border: 1px solid #ccc;
  border-radius: 4rpx;
}

.login-btn {
  width: 80%;
  height: 100rpx;
  line-height: 60rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  border-radius: 4rpx;
  margin-top: 20rpx;
}
